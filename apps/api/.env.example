# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/group_pay"
DATABASE_URL_TEST="postgresql://postgres:postgres@localhost:5433/group_pay_test"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters-long"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="another-super-secure-secret-for-sessions"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DEST="uploads/"

# Email Configuration (for future use)
EMAIL_FROM="noreply@group-pay.com"
EMAIL_SERVICE="sendgrid"
SENDGRID_API_KEY=""

# External APIs (for future integrations)
VENMO_CLIENT_ID=""
VENMO_CLIENT_SECRET=""
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""