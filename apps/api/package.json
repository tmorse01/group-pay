{
  "name": "@group-pay/api",
  "version": "1.0.0",
  "description": "Fastify API server for Group Pay",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:studio:test": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/group_pay_test prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:validate": "prisma validate",
    "db:format": "prisma format",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "9",
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^1.9.3",
    "@group-pay/shared": "workspace:*",
    "@prisma/client": "^5.2.0",
    "argon2": "^0.31.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.29.1",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@group-pay/config": "workspace:*",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^5.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.39.1",
    "vitest": "^0.34.0"
  },
  "keywords": [
    "api",
    "fastify",
    "prisma"
  ],
  "author": "",
  "license": "ISC"
}
